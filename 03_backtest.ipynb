class TradingStrategy:
    """ãƒˆãƒ¬ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°æˆ¦ç•¥åŸºåº•ã‚¯ãƒ©ã‚¹"""
    
    def __init__(self, initial_capital, transaction_cost, stop_loss=None, take_profit=None):
        self.initial_capital = initial_capital
        self.transaction_cost = transaction_cost
        self.stop_loss = stop_loss
        self.take_profit = take_profit
        
        # çŠ¶æ…‹å¤‰æ•°
        self.reset()
        
    def reset(self):
        """æˆ¦ç•¥çŠ¶æ…‹ã‚’ãƒªã‚»ãƒƒãƒˆ"""
        self.capital = self.initial_capital
        self.position = 0  # ç¾åœ¨ãƒã‚¸ã‚·ãƒ§ãƒ³ï¼ˆæ­£=ãƒ­ãƒ³ã‚°ã€è² =ã‚·ãƒ§ãƒ¼ãƒˆã€0=ç„¡ãƒã‚¸ã‚·ãƒ§ãƒ³ï¼‰
        self.position_value = 0  # ãƒã‚¸ã‚·ãƒ§ãƒ³è©•ä¾¡é¡
        self.entry_price = 0  # ã‚¨ãƒ³ãƒˆãƒªãƒ¼ä¾¡æ ¼
        self.trades = []  # å–å¼•å±¥æ­´
        self.portfolio_values = []  # ãƒãƒ¼ãƒˆãƒ•ã‚©ãƒªã‚ªä¾¡å€¤æ¨ç§»
        
    def generate_signal(self, row):
        """ã‚·ã‚°ãƒŠãƒ«ç”Ÿæˆï¼ˆã‚µãƒ–ã‚¯ãƒ©ã‚¹ã§å®Ÿè£…ï¼‰"""
        raise NotImplementedError
        
    def execute_trade(self, price, signal, date):
        """å–å¼•å®Ÿè¡Œ"""
        if signal == 1 and self.position <= 0:  # ãƒ­ãƒ³ã‚°ã‚¨ãƒ³ãƒˆãƒªãƒ¼
            self._enter_long(price, date)
        elif signal == -1 and self.position >= 0:  # ã‚·ãƒ§ãƒ¼ãƒˆã‚¨ãƒ³ãƒˆãƒªãƒ¼
            self._enter_short(price, date)
        elif signal == 0:  # ãƒã‚¸ã‚·ãƒ§ãƒ³æ±ºæ¸ˆ
            self._close_position(price, date)
            
    def _enter_long(self, price, date):
        """ãƒ­ãƒ³ã‚°ãƒã‚¸ã‚·ãƒ§ãƒ³é–‹å§‹"""
        if self.position < 0:  # ã‚·ãƒ§ãƒ¼ãƒˆãƒã‚¸ã‚·ãƒ§ãƒ³ãŒã‚ã‚‹å ´åˆã¯æ±ºæ¸ˆ
            self._close_position(price, date)
            
        # åˆ©ç”¨å¯èƒ½è³‡é‡‘ã§ãƒ­ãƒ³ã‚°ãƒã‚¸ã‚·ãƒ§ãƒ³
        available_capital = self.capital * (1 - self.transaction_cost)
        position_size = available_capital / price
        
        if position_size > 0:
            self.position = position_size
            self.entry_price = price
            self.capital = 0
            
            self.trades.append({
                'date': date,
                'action': 'LONG_ENTRY',
                'price': price,
                'quantity': position_size,
                'capital': self.capital + self.position * price
            })
            
    def _enter_short(self, price, date):
        """ã‚·ãƒ§ãƒ¼ãƒˆãƒã‚¸ã‚·ãƒ§ãƒ³é–‹å§‹"""
        if self.position > 0:  # ãƒ­ãƒ³ã‚°ãƒã‚¸ã‚·ãƒ§ãƒ³ãŒã‚ã‚‹å ´åˆã¯æ±ºæ¸ˆ
            self._close_position(price, date)
            
        # ã‚·ãƒ§ãƒ¼ãƒˆãƒã‚¸ã‚·ãƒ§ãƒ³ï¼ˆè³‡é‡‘ã®ç¯„å›²å†…ã§ï¼‰
        available_capital = self.capital * (1 - self.transaction_cost)
        position_size = -(available_capital / price)  # è² ã®å€¤
        
        if position_size < 0:
            self.position = position_size
            self.entry_price = price
            self.capital = available_capital  # ã‚·ãƒ§ãƒ¼ãƒˆæ™‚ã¯è³‡é‡‘ã¯ç¶­æŒ
            
            self.trades.append({
                'date': date,
                'action': 'SHORT_ENTRY',
                'price': price,
                'quantity': position_size,
                'capital': self.capital
            })
            
    def _close_position(self, price, date):
        """ãƒã‚¸ã‚·ãƒ§ãƒ³æ±ºæ¸ˆ"""
        if self.position == 0:
            return
            
        if self.position > 0:  # ãƒ­ãƒ³ã‚°æ±ºæ¸ˆ
            proceeds = self.position * price * (1 - self.transaction_cost)
            action = 'LONG_EXIT'
        else:  # ã‚·ãƒ§ãƒ¼ãƒˆæ±ºæ¸ˆ
            # ã‚·ãƒ§ãƒ¼ãƒˆæ±ºæ¸ˆã§ã¯å·®é¡ã‚’è¨ˆç®—
            pnl = abs(self.position) * (self.entry_price - price)
            proceeds = self.capital + pnl * (1 - self.transaction_cost)
            action = 'SHORT_EXIT'
            
        self.capital = proceeds
        closed_quantity = self.position
        self.position = 0
        self.entry_price = 0
        
        self.trades.append({
            'date': date,
            'action': action,
            'price': price,
            'quantity': closed_quantity,
            'capital': self.capital
        })
        
    def check_stop_conditions(self, current_price, date):
        """ã‚¹ãƒˆãƒƒãƒ—ãƒ­ã‚¹ãƒ»ãƒ†ã‚¤ã‚¯ãƒ—ãƒ­ãƒ•ã‚£ãƒƒãƒˆã®ãƒã‚§ãƒƒã‚¯"""
        if self.position == 0 or self.entry_price == 0:
            return
            
        if self.position > 0:  # ãƒ­ãƒ³ã‚°ãƒã‚¸ã‚·ãƒ§ãƒ³
            price_change = (current_price - self.entry_price) / self.entry_price
        else:  # ã‚·ãƒ§ãƒ¼ãƒˆãƒã‚¸ã‚·ãƒ§ãƒ³
            price_change = (self.entry_price - current_price) / self.entry_price
            
        # ã‚¹ãƒˆãƒƒãƒ—ãƒ­ã‚¹
        if self.stop_loss and price_change <= -self.stop_loss:
            self._close_position(current_price, date)
            
        # ãƒ†ã‚¤ã‚¯ãƒ—ãƒ­ãƒ•ã‚£ãƒƒãƒˆ
        elif self.take_profit and price_change >= self.take_profit:
            self._close_position(current_price, date)
            
    def update_portfolio_value(self, current_price):
        """ãƒãƒ¼ãƒˆãƒ•ã‚©ãƒªã‚ªä¾¡å€¤ã®æ›´æ–°"""
        if self.position > 0:  # ãƒ­ãƒ³ã‚°ãƒã‚¸ã‚·ãƒ§ãƒ³
            self.position_value = self.position * current_price
            current_portfolio_value = self.capital + self.position_value
        elif self.position < 0:  # ã‚·ãƒ§ãƒ¼ãƒˆãƒã‚¸ã‚·ãƒ§ãƒ³
            pnl = abs(self.position) * (self.entry_price - current_price)
            current_portfolio_value = self.capital + pnl
        else:  # ç„¡ãƒã‚¸ã‚·ãƒ§ãƒ³
            current_portfolio_value = self.capital
            
        self.portfolio_values.append(current_portfolio_value)
        return current_portfolio_value


class MLStrategy(TradingStrategy):
    """æ©Ÿæ¢°å­¦ç¿’ãƒ™ãƒ¼ã‚¹ã®æˆ¦ç•¥"""
    
    def __init__(self, model, min_confidence=0.6, **kwargs):
        super().__init__(**kwargs)
        self.model = model
        self.min_confidence = min_confidence
        
    def generate_signal(self, row):
        """æ©Ÿæ¢°å­¦ç¿’ãƒ¢ãƒ‡ãƒ«ã‹ã‚‰ã‚·ã‚°ãƒŠãƒ«ç”Ÿæˆ"""
        # äºˆæ¸¬ç¢ºç‡ã‚’å–å¾—
        prediction_prob = row.get('prediction_prob', 0.5)
        
        if prediction_prob > self.min_confidence:
            return 1  # ãƒ­ãƒ³ã‚°ã‚·ã‚°ãƒŠãƒ«
        elif prediction_prob < (1 - self.min_confidence):
            return -1  # ã‚·ãƒ§ãƒ¼ãƒˆã‚·ã‚°ãƒŠãƒ«
        else:
            return 0  # ç„¡ãƒã‚¸ã‚·ãƒ§ãƒ³

